{
	"name": "@rire/core",
	"version": "0.0.1",
	"description": "AI-powered translation engine for localization files",
	"license": "PolyForm-Noncommercial-1.0.0",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts",
			"import": "./dist/src/index.js"
		}
	},
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=24"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "ava",
		"lint": "xo --fix"
	},
	"devDependencies": {
		"@ava/typescript": "^6.0.0",
		"ava": "^6.4.1",
		"typescript": "^5.0.3"
	},
	"ava": {
		"files": [
			"test/**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"src/": "dist/src/",
				"test/": "dist/test/"
			},
			"compile": "tsc"
		}
	},
	"dependencies": {
		"@ai-sdk/anthropic": "^3.0.37",
		"@ai-sdk/google": "^3.0.21",
		"@ai-sdk/openai": "^3.0.25",
		"ai": "^6.0.73",
		"zod": "^4.3.6"
	},
	"xo": {
		"rules": {
			"@typescript-eslint/naming-convention": [
				"error",
				{
					"selector": "variable",
					"modifiers": ["const", "exported"],
					"format": ["strictCamelCase", "UPPER_CASE"]
				}
			]
		}
	}
}
